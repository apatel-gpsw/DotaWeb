@{
	ViewBag.Title = "Home Page";
}

<div class="jumbotron">
	<h1>Search match/player</h1>
	<div class="form-group">
		@Html.Label("Match ID", "Match ID")
		<div class="col-md-10">
			@Html.TextBox("Match ID", null)
		</div>
	</div>
	<div class="form-group">
		@Html.Label("Player ID", "Player ID")
		<div class="col-md-10">
			@Html.TextBox("Player ID", null)
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-10">
			<input type="submit" value="Search &raquo;" class="btn btn-primary btn-lg">
		</div>
	</div>
</div>

